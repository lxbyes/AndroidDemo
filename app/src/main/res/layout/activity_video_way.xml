<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context="me.leckie.demo.activity.VideoWayActivity">

    <Button
        android:id="@+id/btn_videoview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:onClick="redirect"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:text="VideoView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_surfaceview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:onClick="redirect"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:text="SurfaceView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_surfaceview_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:onClick="redirect"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:text="SurfaceView2"
        android:textAllCaps="false" />

</LinearLayout>
